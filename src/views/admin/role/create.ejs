<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no" />
    <meta name="description" content="" />
    <meta name="author" content="" />
    <title>Create User</title>
    <link href="https://cdn.jsdelivr.net/npm/simple-datatables@latest/dist/style.css" rel="stylesheet" />
    <link href="/css/styles.css" rel="stylesheet" />
    <script src="https://use.fontawesome.com/releases/v6.1.0/js/all.js" crossorigin="anonymous"></script>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
    <link rel="stylesheet" href="//cdnjs.cloudflare.com/ajax/libs/toastr.js/2.0.2/css/toastr.min.css">
    <script src="//cdnjs.cloudflare.com/ajax/libs/jquery/2.1.1/jquery.min.js"></script>
    <script src="//cdnjs.cloudflare.com/ajax/libs/toastr.js/2.0.2/js/toastr.min.js"></script>
    <script type="text/javascript" src="/js/sweetalert2.all.js"></script>
</head>
<body class="sb-nav-fixed" onload="<%= (typeof message !== 'undefined' && message) ? 'sendToastr(\''+message.text +'\')' : ''%>">
<nav class="sb-topnav navbar navbar-expand navbar-dark bg-dark">
    <!-- Navbar Brand-->
    <a class="navbar-brand ps-3" href="/">HaiZuka</a>
    <!-- Sidebar Toggle-->
    <button class="btn btn-link btn-sm order-1 order-lg-0 me-4 me-lg-0" id="sidebarToggle" href="#!"><i class="fas fa-bars"></i></button>
    <!-- Navbar Search-->
    <form class="d-none d-md-inline-block form-inline ms-auto me-0 me-md-3 my-2 my-md-0">
        <div class="input-group">
            <input class="form-control" type="text" placeholder="Tìm kiếm..." aria-label="Search for..." aria-describedby="btnNavbarSearch" />
            <button class="btn btn-primary" id="btnNavbarSearch" type="button"><i class="fas fa-search"></i></button>
        </div>
    </form>
    <!-- Navbar-->
    <%- include('../../includes/user'); -%>
</nav>
<div id="layoutSidenav">
    <div id="layoutSidenav_nav">
        <nav class="sb-sidenav accordion sb-sidenav-dark" id="sidenavAccordion">
            <%- include('../../includes/menu'); -%>
            <%- include('../../includes/sidebar'); -%>
        </nav>
    </div>
    <div id="layoutSidenav_content">
        <main>
            <div class="container-fluid px-4 mt-3 bg-light">
                <!--                content-->
                <h1>Thêm quyền</h1>
                <form action="" method="post" class="col col-lg-8">
                    <div class="form-group my-2">
                        <label for="username">Tên Role</label>
                        <input type="text" class="form-control" id="role_name" name="role_name" placeholder="Tên Role">
                    </div>

                    <div class="form-group my-2">
                        <label for="username">Mô tả</label>
                        <input type="text" class="form-control" id="description" name="description" placeholder="Mô tả" value="Đây là mô tả">
                    </div>

                    <%
                        colors = ['danger', 'success', 'warning', 'info', 'dark', 'primary'];
                    %>

                    <div class="form-group row">
                        <label class="col-sm-2">Màu sắc: </label>
                        <div class="col-sm-10">
                            <% colors.forEach(function(color) { %>
                            <div class="form-check form-check-inline">
                                <input class="form-check-input" type="radio" name="color" id="inlineRadio1" value="<%= color %>" <%= (color == 'danger') ? 'checked' : ''%>>
                                <label class="form-check-label" for="inlineRadio1"><span class="badge bg-<%= color %>"><%= color %></span></label>
                            </div>
                            <% }); %>
                        </div>
                    </div>

                    <div class="justify-content-center d-flex my-5">
                        <button type="submit" class="btn btn-primary">Thêm</button>
                    </div>
                </form>
            </div>
        </main>
        <%- include('../../includes/footer'); -%>
    </div>
</div>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" crossorigin="anonymous"></script>
<script src="/js/scripts.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/Chart.js/2.8.0/Chart.min.js" crossorigin="anonymous"></script>
<script src="/assets/demo/chart-area-demo.js"></script>
<script src="/assets/demo/chart-bar-demo.js"></script>
<script src="https://cdn.jsdelivr.net/npm/simple-datatables@latest" crossorigin="anonymous"></script>
<script src="/js/datatables-simple-demo.js"></script>
<%- include('../../includes/script'); -%>

</body>
</html>
