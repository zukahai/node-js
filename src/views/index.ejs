<!doctype html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport"
          content="width=device-width, user-scalable=no, initial-scale=1.0, maximum-scale=1.0, minimum-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <title>Home</title>
    <link rel="stylesheet" href="css/style.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
    <link rel="stylesheet" href="//cdnjs.cloudflare.com/ajax/libs/toastr.js/2.0.2/css/toastr.min.css">
    <script src="//cdnjs.cloudflare.com/ajax/libs/jquery/2.1.1/jquery.min.js"></script>
    <script src="//cdnjs.cloudflare.com/ajax/libs/toastr.js/2.0.2/js/toastr.min.js"></script>
    <script type="text/javascript" src="js/sweetalert2.all.js"></script>
</head>
<body onload="<%= (message) ? 'sendToastr(\''+message.text +'\')' : ''%>">
<%- include('includes/menu'); -%>

    <div class="container">

        <h1>Danh sách người dùng</h1>
        <a href="/create" class="btn btn-primary">Thêm người dùng</a>
        <table class="table">
            <thead>
            <tr>
                <th scope="col">#</th>
                <th scope="col">FirstName</th>
                <th scope="col">LastName</th>
                <th scope="col">Email</th>
                <th scope="col">Address</th>
                <th>&nbsp;</th>
            </tr>
            </thead>
            <tbody>
            <% for (let i = 0; i < dataUser.length; i++) { %>
            <tr>
                <th scope="row"><%= dataUser[i].id %></th>
                <td><%= dataUser[i].firstName %></td>
                <td><%= dataUser[i].lastName %></td>
                <td><%= dataUser[i].email %></td>
                <td><%= dataUser[i].address %></td>
                <td>
                <td class="align-center justify-content-center">
                    <a href="/detail/<%= dataUser[i].id %>" class="btn btn-icon btn-info btn-sm btn-icon-md btn-circle mx-1"
                       title="Xem">
                        <i class="fa fa-eye"></i>
                    </a>
                    <a href="" class="btn btn-icon btn-success btn-sm btn-icon-md btn-circle mx-1"
                       title="Sửa">
                        <i class="fa fa-edit"></i>
                    </a>
                    <span class="btn btn-icon btn-danger delete-btn btn-sm btn-icon-md btn-circle mx-1"
                          data-toggle="tooltip" data-placement="top" data-id="<%= dataUser[i].id %>" title="Xóa">
                          <i class="fa fa-trash"></i>
                    </span>
                </td>
                </td>
            </tr>
            <% } %>
            </tbody>
        </table>
    </div>

    <script type="text/javascript">
        function sendToastr(text){
            toastr.success(text);
        }
    </script>
    <script>
        //handle on click delete-btn
        $(document).on("click", ".delete-btn", function () {
            var row = $(this).closest("tr");
            var id = $(this).attr("data-id");
            let urlDelete = (window.location.href + "/delete").replaceAll('//delete', '/delete') + "/" +id;
            console.log(id);
            swal.fire({
                title: "Bạn có chắc chắn muốn xóa?",
                text: "Sau khi xóa, bạn sẽ không thể phục hồi dữ liệu này!",
                icon: "warning",
                showCancelButton: true,
                confirmButtonColor: "#3085d6",
                cancelButtonColor: "#d33",
                confirmButtonText: "Đồng ý",
                cancelButtonText: "Hủy bỏ"
            }).then(function (result) {
                if (result.value) {
                    $.ajax({
                        url: urlDelete,
                        type: "GET",
                        success: function (result) {
                            if (result !== null) {
                                toastr.success("Xóa thành công");
                                row.remove();
                            } else {
                                toastr.error("Xóa thất bại");
                            }
                        },
                        error: function (e) {
                            toastr.error("Xóa thất bại");
                        }
                    })
                }
            });
        });
    </script>
</body>
</html>